{% block choice_widget_expanded %}
<div {{ block('widget_container_attributes') }}>
	<ul class="simple">
	{% for child in form %}
		<li>
			{{ form_widget(child) }}
			{% if child.vars.value %}
				{{ character_link(child.vars.value, child.vars.label) }}
			{% else %}
				{{ child.vars.label|trans }}
			{% endif %}
		</li>
	{% endfor %}
	</ul>
</div>
{% endblock choice_widget_expanded %}
