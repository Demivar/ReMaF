{% extends 'base.html.twig' %}

{% trans_default_domain 'core' %}

{% block title %}{%trans with {'%name%': site_short, '%local%': 'security.remind.title'} %}security.remind.title{% endtrans %}{% endblock %}

{% block recaptcha %}<script type="text/javascript" src="https://www.google.com/recaptcha/api.js" async defer></script>{% endblock %}

{% block content %}
    <h1>{% trans %}security.remind.header{% endtrans %}</h1>
    {{ form_start(form) }}
    {{ form_row(form.email) }}
    <center><div class="g-recaptcha" data-sitekey="{{ recaptcha_site_key }}"></div></center>
    {{ form_row(form.submit) }}
    {{ form_end(form) }}
{% endblock %}
